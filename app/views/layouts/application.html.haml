!!!
%html
  %head
    %title GeoShops
    %script{:async => "", :defer => "", :src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyA-AZcDoO445e9qXJjXZgNTvNwIeFlfz-g&callback=initMap"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar-light{style: "background-color: #e3f2fd;"}
      .container-fluid
        .navbar-header
          %a.navbar-brand{href: root_path} GEO SHOPS
        #navbar.navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right 
            %li
              %a{href: new_shop_url, 'data-no-turbolink' => true} Register Shop
  %br/
  = render partial: 'layouts/flash_messages', flash: flash      
  .row
    .col-md-2
    .col-md-8
      = yield
    .col-md-2